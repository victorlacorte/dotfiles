{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "background": "#FFDE57",
                    "foreground": "#111111",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "display_mode": "environment",
                        "template": "({{ .Venv }} python {{ .Major }}.{{ .Minor }}) "
                    },
                    "style": "plain",
                    "type": "python"
                },
                {
                    "foreground": "#0CA0D8",
                    "properties": {
                        "folder_separator_icon": "/",
                        "style": "full",
                        "template": "\uf07b {{ .Path }} "
                    },
                    "style": "plain",
                    "type": "path"
                },
                {
                    "foreground": "#14A5AE",
                    "powerline_symbol": "\ue0b0",
                    "properties": {
                        "fetch_stash_count": true,
                        "fetch_upstream_icon": true,
                        "template": "{{ .UpstreamIcon }}{{ .HEAD }}{{ if gt .StashCount 0 }} \uf692 {{ .StashCount }}{{ end }} "
                    },
                    "style": "plain",
                    "type": "git"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "right",
            "segments": [
                {
                    "foreground": "#fff",
                    "invert_powerline": true,
                    "properties": {
                        "template": "\uf64f {{ .CurrentDate | date .Format }}"
                    },
                    "style": "powerline",
                    "type": "time"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "foreground": "#cd5e42",
                    "properties": {
                        "root_icon": "\ue3bf",
                        "template": "\uf0e7 "
                    },
                    "style": "plain",
                    "type": "root"
                },
                {
                    "foreground": "#CD4277",
                    "properties": {
                        "template": "# "
                    },
                    "style": "plain",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "version": 1
}
